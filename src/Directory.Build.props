<Project>
  <PropertyGroup>
    <VersionPrefix>0.0.0</VersionPrefix>

    <LangVersion>latest</LangVersion>

    <OutputType>Library</OutputType>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <MSBuildWarningsAsMessages>NETSDK1069</MSBuildWarningsAsMessages>

    <PackageId>$(AssemblyName)</PackageId>
    <PackageLicenseUrl>https://github.com/barclayadam/blueprint/blob/master/LICENSE.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/barclayadam/blueprint</PackageProjectUrl>
    <PackageReleaseNotes>See https://github.com/barclayadam/blueprint/releases for more info</PackageReleaseNotes>
    <PackageBaseTags>API;CQRS;Blueprint</PackageBaseTags>

    <Product>Blueprint</Product>
    <Company>Red Sequence</Company>
    <Copyright>Copyright (c) 2013 Red Sequence</Copyright>
    <Authors>Adam Barclay, Michael Taylor</Authors>
    
    <RepositoryUrl>https://github.com/barclayadam/blueprint.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryBranch>master</RepositoryBranch>

    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>

    <DefaultLanguage>en-GB</DefaultLanguage>
    <NeutralLanguage>en-GB</NeutralLanguage>

    <PublishRepositoryUrl>true</PublishRepositoryUrl>

    <CodeAnalysisRuleSet>Rules.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-19367-01" PrivateAssets="All" IncludeAssets="runtime; build; native; contentfiles; analyzers" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0-preview.2" PrivateAssets="All" IncludeAssets="runtime; build; native; contentfiles; analyzers" />
  </ItemGroup>
</Project>